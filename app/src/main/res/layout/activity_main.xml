<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/cmdAbrir3"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="CHAMAR TERCEIRA ACTIVITY"
        android:textColor="#4CAF50"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cmdAbrir" />

    <Button
        android:id="@+id/cmdAbrir"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:text="CHAMAR SEGUNDA ACTIVITY"
        android:textColor="#2196F3"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.256" />

    <Button
        android:id="@+id/cmdAbrir5"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="CHAMAR QUINTA ACTIVITY"
        android:textColor="#FFEB3B"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cmdAbrir4"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/cmdAbrir4"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="CHAMAR QUARTA ACTIVITY"
        android:textColor="#FD0000"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cmdAbrir3" />

</androidx.constraintlayout.widget.ConstraintLayout>